@model INMOBILIARIA_JosiasTolaba.Models.Inquilino

@{
	ViewData["Title"] = "Inquilino-Detalle";
}
<h1>
	Inquilino
</h1>
<hr />
<div>
    <dl class="row">
    <input type="hidden" id="IdInquilino" value="@Model.IdInquilino" />
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Dni</dt>
        <dd class="col-sm-10">@Model.Dni</dd>

        <dt class="col-sm-2">Telefono</dt>
        <dd class="col-sm-10">@Model.Telefono</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@(Model.Estado ? "Activo" : "Inactivo")</dd>
    </dl>
</div>

<p>
<p>ID del habitante: @Model.IdInquilino</p>
    <a asp-action="Update" asp-route-IdInquilino="@Model.IdInquilino" class="btn btn-warning">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
    <a asp-controller="Contrato"asp-action="ContratosPorInquilino"asp-route-IdInquilino="@Model.IdInquilino"class="btn btn-primary">Ver contratos de este inquilino</a>

</p>