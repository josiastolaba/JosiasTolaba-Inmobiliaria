@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Inquilino>

@{
	ViewData["Title"] = "Inquilino";
}

<h1>
	Inquilino
</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create" title="Crear"><i class="fa-solid fa-plus"></i>âž• Nuevo Inquilino</a>
</p>

  <label for="buscadorInput" class="form-label">Buscar propietario por nombre o DNI</label>
    <input type="text" id="buscadorInput" class="form-control mb-2" placeholder="Escribe al menos 3 letras..." 
    list="opcionesInquilino"/>
   
   <datalist id="opcionesInquilino">
   </datalist>
<hr />
<!-- Contenedor que ahora incluye tabla + paginaciÃ³n -->
<div id="tablaInquilinos">
    @await Html.PartialAsync("_TablaPaginadaInquilinos", Model)
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#buscadorInput").on("keyup", function () {
            let texto = $(this).val();

            if (texto.length >= 3) {
                $.ajax({
                    url: '/Inquilino/Buscar',
                    type: 'GET',
                    data: { dato: texto },
                    success: function (data) {
                        let lista = $("#opcionesInquilino");
                        lista.empty();

                        if (data.length === 0) {
                            lista.append('<option value="No se encontraron resultados">');
                        } else {
                            data.forEach(function (item) {
                                lista.append(
                                    `<option data-id="${item.idInquilino}" value="${item.nombre} ${item.apellido} - DNI: ${item.dni}"></option>`
                                );
                            });
                        }
                    }
                });
            }
        });

        // Detectar cuando se selecciona un valor del datalist
        $("#buscadorInput").on("change", function () {
            let texto = $(this).val();
            let opcion = $(`#opcionesInquilino option[value='${texto}']`);
            let id = opcion.data("id");

            if (id) {
                window.location.href = '/Inquilino/Details?IdInquilino=' + id;
            }
        });
    });

// ðŸ”¹ Nueva funciÃ³n AJAX para paginaciÃ³n
    function cargarPagina(numPagina) {
        $.ajax({
            url: '/Propietario/Index',
            type: 'GET',
            data: { pagina: numPagina },
            success: function (data) {
                $("#tablaPropietarios").html(data); // reemplaza la tabla + paginacion
                $("html, body").animate({ scrollTop: 0 }, "fast"); // vuelve arriba
            }
        });
    }
</script>