@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Inquilino>

@{
	ViewData["Title"] = "Inquilino";
}

<h1>
	Inquilino
</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create" title="Crear"><i class="fa-solid fa-plus"></i>➕ Nuevo Inquilino</a>
</p>

  <label for="buscadorInput" class="form-label">Buscar propietario por nombre o DNI</label>
    <input type="text" id="buscadorInput" class="form-control mb-2" placeholder="Escribe al menos 3 letras..." 
    list="opcionesInquilino"/>
   
   <datalist id="opcionesInquilino">
   </datalist>
<hr />
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inquilino in Model)
        {
            <tr>
                <td>@inquilino.IdInquilino</td>
                <td>@inquilino.Nombre</td>
                <td>@inquilino.Apellido</td>
                <td>@inquilino.Dni</td>
                <td>@inquilino.Telefono</td>
                <td>@inquilino.Email</td>
                <td>
                    @(inquilino.Estado ? "Activo" : "Inactivo")
                </td>
                <td>
                    <a asp-controller="Inquilino" asp-action="Details" asp-route-IdInquilino="@inquilino.IdInquilino" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-controller="Inquilino" asp-action="Update" asp-route-IdInquilino="@inquilino.IdInquilino" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Inquilino" asp-action="DarDeBaja" asp-route-IdInquilino="@inquilino.IdInquilino" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#buscadorInput").on("keyup", function () {
            let texto = $(this).val();

            if (texto.length >= 3) {
                $.ajax({
                    url: '/Inquilino/Buscar',
                    type: 'GET',
                    data: { dato: texto },
                    success: function (data) {
                        let lista = $("#opcionesInquilino");
                        lista.empty();

                        if (data.length === 0) {
                            lista.append('<option value="No se encontraron resultados">');
                        } else {
                            data.forEach(function (item) {
                                lista.append(
                                    `<option data-id="${item.idInquilino}" value="${item.nombre} ${item.apellido} - DNI: ${item.dni}"></option>`
                                );
                            });
                        }
                    }
                });
            }
        });

        // Detectar cuando se selecciona un valor del datalist
        $("#buscadorInput").on("change", function () {
            let texto = $(this).val();
            let opcion = $(`#opcionesInquilino option[value='${texto}']`);
            let id = opcion.data("id");

            if (id) {
                window.location.href = '/Inquilino/Details?IdInquilino=' + id;
            }
        });
    });
</script>