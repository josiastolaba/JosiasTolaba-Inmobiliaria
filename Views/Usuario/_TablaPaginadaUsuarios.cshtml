@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Usuario>

@{
    var totalPaginas = ViewBag.TotalPaginas;
    var paginaActual = ViewBag.PaginaActual;
}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Foto</th>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Rol</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var usuario in Model)
    {
        var avatarPath = string.IsNullOrEmpty(usuario.Avatar) || usuario.Avatar == "/imagenes/usuarios/"
            ? Url.Content("~/imagenes/usuarios/default-avatar.png")
            : Url.Content(usuario.Avatar);

        <tr>
            <td class="text-center">
                <img src="@avatarPath"
                     alt="Avatar de @usuario.Nombre"
                     class="rounded-circle"
                     width="50" height="50"
                     style="object-fit: cover; border: 2px solid #ddd;" />
            </td>

            <td>@usuario.IdUsuario</td>
            <td>@usuario.Nombre</td>
            <td>@usuario.Apellido</td>
            <td>@usuario.Dni</td>
            <td>@usuario.Rol</td>
            <td>@usuario.Email</td>
            <td>@(usuario.Estado ? "Activo" : "Inactivo")</td>
            <td>
                <a asp-controller="Usuario" asp-action="Details" asp-route-IdUsuario="@usuario.IdUsuario" class="btn btn-info btn-sm">Detalles</a>
                @if (User.IsInRole("Administrador"))
                {
                <a asp-controller="Usuario" asp-action="Update" asp-route-IdUsuario="@usuario.IdUsuario" class="btn btn-warning btn-sm">Editar</a>
                <a asp-controller="Usuario" asp-action="DarDeBaja" asp-route-IdUsuario="@usuario.IdUsuario" class="btn btn-danger btn-sm">Eliminar</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- PaginaciÃ³n -->
<div class="text-center mt-3">
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPaginas; i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" href="#" onclick="cargarPagina(@i); return false;">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
