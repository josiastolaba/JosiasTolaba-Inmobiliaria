@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Usuario>

@{
    var totalPaginas = ViewBag.TotalPaginas;
    var paginaActual = ViewBag.PaginaActual;
}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Foto</th>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Rol</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var usuario in Model)
    {
        var avatarPath = string.IsNullOrEmpty(usuario.Avatar) || usuario.Avatar == "/imagenes/usuarios/"
            ? Url.Content("~/imagenes/usuarios/default-avatar.png")
            : Url.Content(usuario.Avatar);

        <tr>
            <td class="text-center">
                <div style="position: relative; display: inline-block;">
                    <img src="@avatarPath"
                         alt="Avatar de @usuario.Nombre"
                         id="avatar-img-@usuario.IdUsuario"
                         class="rounded-circle"
                         width="50" height="50"
                         style="object-fit: cover; border: 2px solid #ddd;" />

                    <button type="button"
                            class="btn btn-sm btn-secondary"
                            style="position: absolute; bottom: -5px; right: -5px; border-radius: 50%; padding: 2px 6px;"
                            onclick="document.getElementById('avatar-file-@usuario.IdUsuario').click()">
                        <i class="bi bi-camera"></i>
                    </button>

                    <input type="file"
                           id="avatar-file-@usuario.IdUsuario"
                           style="display:none"
                           accept="image/*"
                           onchange="subirAvatar(@usuario.IdUsuario)" />
                </div>
            </td>

            <td>@usuario.IdUsuario</td>
            <td>@usuario.Nombre</td>
            <td>@usuario.Apellido</td>
            <td>@usuario.Dni</td>
            <td>@usuario.Rol</td>
            <td>@usuario.Email</td>
            <td>@(usuario.Estado ? "Activo" : "Inactivo")</td>
            <td>
                <a asp-controller="Usuario" asp-action="Details" asp-route-IdUsuario="@usuario.IdUsuario" class="btn btn-info btn-sm">Detalles</a>
                <a asp-controller="Usuario" asp-action="Update" asp-route-IdUsuario="@usuario.IdUsuario" class="btn btn-warning btn-sm">Editar</a>
                <a asp-controller="Usuario" asp-action="DarDeBaja" asp-route-IdUsuario="@usuario.IdUsuario" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- PaginaciÃ³n -->
<div class="text-center mt-3">
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPaginas; i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" href="#" onclick="cargarPagina(@i); return false;">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

@section Scripts {
<script>
function subirAvatar(idUsuario) {
    const fileInput = document.getElementById(`avatar-file-${idUsuario}`);
    const file = fileInput.files[0];
    if (!file) return;

    const formData = new FormData();
    formData.append("idUsuario", idUsuario);
    formData.append("avatar", file);

    fetch("/Usuario/SubirAvatar", {
        method: "POST",
        body: formData
    })
    .then(r => r.json())
    .then(data => {
        if (data.ok) {
            document.getElementById(`avatar-img-${idUsuario}`).src = data.nuevaRuta;
        } else {
            alert("Error: " + data.mensaje);
        }
    })
    .catch(err => alert("Error al subir la imagen: " + err));
}
</script>
}
