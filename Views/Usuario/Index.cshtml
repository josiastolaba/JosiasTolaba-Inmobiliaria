@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Usuario>
@{
	ViewData["Title"] = "Usuario";
}
<h1>
	Usuario
</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create" title="Crear"><i class="fa-solid fa-plus"></i>âž• Nuevo Usuario</a>
</p>
<hr />
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Rol</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.IdUsuario</td>
                <td>@usuario.Nombre</td>
                <td>@usuario.Apellido</td>
                <td>@usuario.Dni</td>
                <td>@usuario.Rol</td>
                <td>@usuario.Email</td>
                <td>
                    @(usuario.Estado ? "Activo" : "Inactivo")
                </td>
                <td>
                    <a asp-controller="Usuario" asp-action="Details" asp-route-IdUsuario="@usuario.IdUsuario" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-controller="Usuario" asp-action="Update" asp-route-IdUsuario="@usuario.IdUsuario" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Usuario" asp-action="DarDeBaja" asp-route-IdUsuario="@usuario.IdUsuario" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>