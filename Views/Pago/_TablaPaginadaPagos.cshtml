@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Pago>

@{
    var totalPaginas = ViewBag.TotalPaginas;
    var paginaActual = ViewBag.PaginaActual;
}
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Fecha de Pago</th>
            <th>Contrato</th>
            <th>Quien Creo</th>
            <th>Quien Elimino</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr>
                <td>@pago.IdPago</td>
                <td>@pago.FechaPago</td>
                <td>@pago.IdContrato</td>
                <td>@pago.QuienCreo</td>
                <td>@pago.QuienElimino</td>
                <td>@(pago.Estado ? "Activo" : "Inactivo")
                </td>
                <td>
                    <a asp-controller="Pago" asp-action="Details" asp-route-IdPago="@pago.IdPago" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-controller="Pago" asp-action="Update" asp-route-IdPago="@pago.IdPago" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Pago" asp-action="DarDeBaja" asp-route-IdPago="@pago.IdPago" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- PaginaciÃ³n -->
<div class="text-center mt-3">
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPaginas; i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" href="#" onclick="cargarPagina(@i); return false;">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>