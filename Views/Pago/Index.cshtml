@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Pago>

@{
	ViewData["Title"] = "Pago";
}

<h1>
	Pago
</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create" title="Crear"><i class="fa-solid fa-plus"></i>➕ Nuevo Pago</a>
</p>
<hr />
<div class="mb-3">
    <label for="buscadorInput" class="form-label">Buscar Contrato por </label>
    <input type="text" id="buscadorInput" class="form-control mb-2" placeholder="Escribe al menos 3 letras..." 
    list="opcionesPago"/>
    <datalist id="opcionesPago">
    </datalist>
</div>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Fecha de Pago</th>
            <th>Contrato</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr>
                <td>@pago.IdPago</td>
                <td>@pago.FechaPago</td>
                <td>@pago.IdContrato</td>
                <td>
                    @(pago.Estado ? "Activo" : "Inactivo")
                </td>
                <td>
                    <a asp-controller="Pago" asp-action="Details" asp-route-IdPago="@pago.IdPago" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-controller="Pago" asp-action="Update" asp-route-IdPago="@pago.IdPago" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Pago" asp-action="DarDeBaja" asp-route-IdPago="@pago.IdPago" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- JQuery desde CDN -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#buscadorInput").on("keyup", function () {
            let texto = $(this).val();

            if (texto.length >= 3) {
                $.ajax({
                    url: '/Pago/Buscar',
                    type: 'GET',
                    data: { dato: texto },
                    success: function (data) {
                        let lista = $("#opcionesPago"); 
                        lista.empty();

                        if (data.length === 0) {
                            lista.append('<option value="No se encontraron resultados">');
                        } else {
                            data.forEach(function (item) {
                                lista.append(
                                    `<option data-id="${item.idPago}" value="Monto: ${item.monto} - Fecha: ${item.fechaPago} - Mes: ${item.mes} - N° Pago: ${item.numeroPago}">`
                                );
                            });
                        }
                    }
                });
            }
        });

        // Detectar cuando se selecciona un valor del datalist
        $("#buscadorInput").on("change", function () {
            let texto = $(this).val();
            let opcion = $(`#opcionesPago option[value='${texto}']`);
            let id = opcion.data("id");

            if (id) {
                window.location.href = '/Pago/Details?IdPago=' + id;
            }
        });
    });
</script>