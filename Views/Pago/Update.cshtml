@model INMOBILIARIA_JosiasTolaba.Models.Pago

@{
	ViewData["Title"] = "Pago-Modificar";
}
<h1>
	Pago
</h1>
<hr />
<div class = "form-Update">
    <form asp-action="Update">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="IdPago" value="@Model.IdPago"/>

        <div class="form-group">
            <label asp-for="FechaPago" class="control-label"></label>
            <input asp-for="FechaPago" class="form-control" type="date" />
            <span asp-validation-for="FechaPago" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Monto" class="control-label"></label>
            <input asp-for="Monto" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Monto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Mes" class="control-label"></label>
            <input asp-for="Mes" class="form-control" maxlength="1" />
            <span asp-validation-for="Mes" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NumeroPago" class="control-label"></label>
            <input asp-for="NumeroPago" class="form-control" />
            <span asp-validation-for="NumeroPago" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Concepto" class="control-label"></label>
            <input asp-for="Concepto" class="form-control" />
            <span asp-validation-for="Concepto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IdContrato" class="control-label"></label>
            <input asp-for="IdContrato" class="form-control" type="number"/>
            <span asp-validation-for="IdContrato" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </form>
</div>