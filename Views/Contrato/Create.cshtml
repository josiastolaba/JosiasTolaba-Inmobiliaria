@model INMOBILIARIA_JosiasTolaba.Models.Contrato

@{
    ViewData["Title"] = "Nuevo Contrato";
}

<h1>Nuevo Contrato</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label for="IdInquilino">Inquilino</label>
        <select asp-for="Habitante.IdInquilino" class="form-control" asp-items="@(new SelectList(ViewBag.Inquilinos, "IdInquilino", "Nombre"))"></select>
    </div>

    <div class="form-group">
        <label asp-for="FechaInicio"></label>
        <input asp-for="FechaInicio" class="form-control" type="date"/>
    </div>

    <div class="form-group">
        <label asp-for="FechaFin"></label>
        <input asp-for="FechaFin" class="form-control" type="date"/>
    </div>

    <div class="form-group">
        <label asp-for="MontoMensual"></label>
        <input asp-for="MontoMensual" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" type="checkbox"/>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
