@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Contrato>

@{
    var totalPaginas = ViewBag.TotalPaginas;
    var paginaActual = ViewBag.PaginaActual;
}

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto Mensual</th>
            <th>Habitante</th>
            <th>Propiedad</th>
            @if (User.IsInRole("Administrador"))
            {
            <th>Quien Creo</th>
            <th>Quien Elimino</th>
            }
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var contrato in Model)
    {
        <tr>
            <td>@contrato.IdContrato</td>
            <td>@contrato.FechaInicio</td>
            <td>@contrato.FechaFin</td>
            <td>@contrato.MontoMensual</td>
            <td>@contrato.Habitante?.IdInquilino</td>
            <td>@contrato.Propiedad?.IdInmueble</td>
            @if (User.IsInRole("Administrador"))
            {
            <td>@contrato.QuienCreo</td>
            <td>@contrato.QuienElimino</td>
            }
            <td>@(contrato.Estado ? "Activo" : "Inactivo")</td>
            <td>
                <a asp-controller="Contrato" asp-action="Details" asp-route-IdContrato="@contrato.IdContrato" class="btn btn-info btn-sm">Detalles</a>
                <a asp-controller="Contrato" asp-action="Edit" asp-route-IdContrato="@contrato.IdContrato" class="btn btn-warning btn-sm">Editar</a>
                @if (User.IsInRole("Administrador"))
                {
                <a asp-controller="Contrato" asp-action="Delete" asp-route-IdContrato="@contrato.IdContrato" class="btn btn-danger btn-sm">Eliminar</a>
                }
                <a asp-controller="Contrato" asp-action="Renovar" asp-route-IdContrato="@contrato.IdContrato" class="btn btn-danger btn-sm">Renovar</a>
                <a asp-controller="Pago" asp-action="Create" asp-route-IdContrato="@contrato.IdContrato" class="btn btn-danger btn-sm">Hacer Pago</a>
                <a asp-controller="Contrato" asp-action="Terminar" asp-route-IdContrato="@contrato.IdContrato" class="btn btn-danger btn-sm">Terminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- PaginaciÃ³n -->
<div class="text-center mt-3">
    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= totalPaginas; i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" href="#" onclick="cargarPagina(@i); return false;">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

