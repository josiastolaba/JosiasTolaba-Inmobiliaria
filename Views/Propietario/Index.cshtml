@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Propietario>

@{
	ViewData["Title"] = "Propietario";
}

<h1>
	Propietario
</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create" title="Crear"><i class="fa-solid fa-plus"></i>➕ Nuevo Propietario</a>
</p>
<hr />
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var propietario in Model)
        {
            <tr>
                <td>@propietario.IdPropietario</td>
                <td>@propietario.Nombre</td>
                <td>@propietario.Apellido</td>
                <td>@propietario.Dni</td>
                <td>@propietario.Telefono</td>
                <td>@propietario.Email</td>
                <td>
                    @(propietario.Estado ? "Activo" : "Inactivo")
                </td>
                <td>
                    <a asp-action="Details" asp-route-IdPropietario="@propietario.IdPropietario" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-controller="Propietario" asp-action="Update" asp-route-IdPropietario="@propietario.IdPropietario" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Propietario" asp-action="Delete" asp-route-IdPropietario="@propietario.IdPropietario" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

