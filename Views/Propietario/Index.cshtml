@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Propietario>

@{
    ViewData["Title"] = "Propietario";
}

<h1>Propietario</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create" title="Crear">
        <i class="fa-solid fa-plus"></i>➕ Nuevo Propietario
    </a>
</p>

<div class="mb-3">
    <label for="buscadorInput" class="form-label">Buscar propietario por nombre o DNI</label>
    <input type="text" id="buscadorInput" class="form-control mb-2" placeholder="Escribe al menos 3 letras..." 
    list="opcionesPropietario"/>
   
   <datalist id="opcionesPropietario">
   </datalist>
</div>

<hr />

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success">@TempData["Mensaje"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- Contenedor que ahora incluye tabla + paginación -->
<div id="tablaPropietarios">
    @await Html.PartialAsync("_TablaPaginadaPropietarios", Model)
</div>

<!-- JQuery desde CDN -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#buscadorInput").on("keyup", function () {
            let texto = $(this).val();

            if (texto.length >= 3) {
                $.ajax({
                    url: '/Propietario/Buscar',
                    type: 'GET',
                    data: { dato: texto },
                    success: function (data) {
                        let lista = $("#opcionesPropietario");
                        lista.empty();

                        if (data.length === 0) {
                            lista.append('<option value="No se encontraron resultados">');
                        } else {
                            data.forEach(function (item) {
                                lista.append(
                                    `<option data-id="${item.idPropietario}" value="${item.nombre} ${item.apellido} - DNI: ${item.dni}"></option>`
                                );
                            });
                        }
                    }
                });
            }
        });

        // Detectar cuando se selecciona un valor del datalist
        $("#buscadorInput").on("change", function () {
            let texto = $(this).val();
            let opcion = $(`#opcionesPropietario option[value='${texto}']`);
            let id = opcion.data("id");

            if (id) {
                window.location.href = '/Propietario/Details?IdPropietario=' + id;
            }
        });
    });


    // 🔹 Nueva función AJAX para paginación
    function cargarPagina(numPagina) {
        $.ajax({
            url: '/Propietario/Index',
            type: 'GET',
            data: { pagina: numPagina },
            success: function (data) {
                $("#tablaPropietarios").html(data); // reemplaza la tabla + paginacion
                $("html, body").animate({ scrollTop: 0 }, "fast"); // vuelve arriba
            }
        });
    }
</script>

