@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Propietario>

@{
    ViewData["Title"] = "Propietario";
}

<h1>Propietario</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create" title="Crear">
        <i class="fa-solid fa-plus"></i>➕ Nuevo Propietario
    </a>
</p>

<div class="mb-3">
    <label for="buscadorInput" class="form-label">Buscar propietario por nombre o DNI</label>
    <input type="text" id="buscadorInput" class="form-control mb-2" placeholder="Escribe al menos 3 letras..." 
    list="opcionesPropietario"/>
   
   <datalist id="opcionesPropietario">
   </datalist>
</div>

<hr />
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var propietario in Model)
        {
            <tr>
                <td>@propietario.IdPropietario</td>
                <td>@propietario.Nombre</td>
                <td>@propietario.Apellido</td>
                <td>@propietario.Dni</td>
                <td>@propietario.Telefono</td>
                <td>@propietario.Email</td>
                <td>@(propietario.Estado ? "Activo" : "Inactivo")</td>
                <td>
                    <a asp-controller="Propietario" asp-action="Details" asp-route-IdPropietario="@propietario.IdPropietario" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-controller="Propietario" asp-action="Update" asp-route-IdPropietario="@propietario.IdPropietario" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Propietario" asp-action="DarDeBaja" asp-route-IdPropietario="@propietario.IdPropietario" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- JQuery desde CDN -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#buscadorInput").on("keyup", function () {
            let texto = $(this).val();

            if (texto.length >= 3) {
                $.ajax({
                    url: '/Propietario/Buscar',
                    type: 'GET',
                    data: { dato: texto },
                    success: function (data) {
                        let lista = $("#opcionesPropietario");
                        lista.empty();

                        if (data.length === 0) {
                            lista.append('<option value="No se encontraron resultados">');
                        } else {
                            data.forEach(function (item) {
                                lista.append(
                                    `<option data-id="${item.idPropietario}" value="${item.nombre} ${item.apellido} - DNI: ${item.dni}"></option>`
                                );
                            });
                        }
                    }
                });
            }
        });

        // Detectar cuando se selecciona un valor del datalist
        $("#buscadorInput").on("change", function () {
            let texto = $(this).val();
            let opcion = $(`#opcionesPropietario option[value='${texto}']`);
            let id = opcion.data("id");

            if (id) {
                window.location.href = '/Propietario/Details?IdPropietario=' + id;
            }
        });
    });
</script>

