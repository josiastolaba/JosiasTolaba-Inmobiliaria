@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.Inmueble>

@{
	ViewData["Title"] = "Inmueble";
}

<h1>
	Inmueble
</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create" title="Crear"><i class="fa-solid fa-plus"></i>➕ Nuevo Inmueble</a>
</p>
<hr />
<div class="mb-3">
    <label for="buscadorInput" class="form-label">Buscar Contrato por Direccion, Tipo, Uso o Precio </label>
    <input type="text" id="buscadorInput" class="form-control mb-2" placeholder="Escribe al menos 3 letras..." 
    list="opcionesInmueble"/>
    <datalist id="opcionesInmueble">
    </datalist>
</div>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Tipo</th>
            <th>Dirección</th>
            <th>Uso</th>
            <th>Longitud</th>
            <th>Ambiente</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inmueble in Model)
        {
            <tr>
                <td>@inmueble.IdPropietario</td>
                <td>@inmueble.IdTipo</td>
                <td>@inmueble.Direccion</td>
                <td>@inmueble.Uso</td>
                <td>@inmueble.Longitud</td>
                <td>@inmueble.Ambiente</td>
                <td>
                    @(inmueble.Estado ? "Activo" : "Inactivo")
                </td>
                <td>
                    <a asp-controller="Inmueble" asp-action="Details" asp-route-IdInmueble="@inmueble.IdInmueble" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-controller="Inmueble" asp-action="Update" asp-route-IdInmueble="@inmueble.IdInmueble" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="Inmueble" asp-action="DarDeBaja" asp-route-IdInmueble="@inmueble.IdInmueble" class="btn btn-danger btn-sm">Eliminar</a>
                    <a asp-controller="Contrato" asp-action="Create" asp-route-IdInmueble="@inmueble.IdInmueble" class="btn btn-danger btn-sm">Hacer Contrato</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- JQuery desde CDN -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#buscadorInput").on("keyup", function () {
            let texto = $(this).val();

            if (texto.length >= 3) {
                $.ajax({
                    url: '/Inmueble/Buscar',
                    type: 'GET',
                    data: { dato: texto },
                    success: function (data) {
                        let lista = $("#opcionesInmueble"); 
                        lista.empty();

                        if (data.length === 0) {
                            lista.append('<option value="No se encontraron resultados">');
                        } else {
                            data.forEach(function (item) {
                                lista.append(
                                    `<option data-id="${item.idInmueble}" 
                                        value="${item.direccion} (${item.tipo})">
                                    </option>`
                                );
                            });
                        }
                    }
                });
            }
        });

        // Detectar cuando se selecciona un valor del datalist
        $("#buscadorInput").on("change", function () {
            let texto = $(this).val();
            let opcion = $(`#opcionesInmueble option[value='${texto}']`);
            let id = opcion.data("id");

            if (id) {
                window.location.href = '/Inmueble/Details?IdInmueble=' + id;
            }
        });
    });
</script>