@model IEnumerable<INMOBILIARIA_JosiasTolaba.Models.TipoInmueble>

@{
    ViewData["Title"] = "Tipo de Inmueble - Crear";
}

<h1>Tipo de Inmueble</h1>
<hr />
<p>
    <a class="btn btn-primary" asp-action="Create" title="Crear"><i class="fa-solid fa-plus"></i>âž• Nuevo Tipo de Inmueble</a>
</p>
<hr />
<div class="mb-3">
    <label for="buscadorInput" class="form-label">Buscar Tipo de Inmueble por </label>
    <input type="text" id="buscadorInput" class="form-control mb-2" placeholder="Escribe al menos 3 letras..." 
    list="opcionesTipoInmueble"/>
    <datalist id="opcionesTipoInmueble">
    </datalist>
</div>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tipo in Model)
        {
            <tr>
                <td>@tipo.IdTipo</td>
                <td>@tipo.Nombre</td>
                <td>@(tipo.Estado ? "Activo" : "Inactivo")
                </td>
                <td>
                    <a asp-controller="TipoInmueble" asp-action="Details" asp-route-IdTipo="@tipo.IdTipo" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-controller="TipoInmueble" asp-action="Update" asp-route-IdTipo="@tipo.IdTipo" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-controller="TipoInmueble" asp-action="DarDeBaja" asp-route-IdTipo="@tipo.IdTipo" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- JQuery desde CDN -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $("#buscadorInput").on("keyup", function () {
            let texto = $(this).val();

            if (texto.length >= 3) {
                $.ajax({
                    url: '/TipoInmueble/Buscar',
                    type: 'GET',
                    data: { dato: texto },
                    success: function (data) {
                        let lista = $("#opcionesTipoInmueble"); 
                        lista.empty();

                        if (data.length === 0) {
                            lista.append('<option value="No se encontraron resultados">');
                        } else {
                            data.forEach(function (item) {
                                lista.append(
                                    `<option data-id="${item.idTipo}" value="Nombre: ${item.nombre}">`
                                );
                            });
                        }
                    }
                });
            }
        });

        // Detectar cuando se selecciona un valor del datalist
        $("#buscadorInput").on("change", function () {
            let texto = $(this).val();
            let opcion = $(`#opcionesTipoInmueble option[value='${texto}']`);
            let id = opcion.data("id");

            if (id) {
                window.location.href = '/TipoInmueble/Details?IdTipo=' + id;
            }
        });
    });
</script>